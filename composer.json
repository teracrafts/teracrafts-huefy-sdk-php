{
    "name": "huefy/huefy-sdk",
    "description": "Official PHP SDK for the Huefy email sending platform",
    "type": "library",
    "keywords": ["huefy", "email", "api", "sdk", "template", "transactional"],
    "homepage": "https://github.com/huefy/huefy-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Huefy Team",
            "email": "developers@huefy.com",
            "homepage": "https://huefy.com"
        }
    ],
    "support": {
        "issues": "https://github.com/huefy/huefy-sdk/issues",
        "source": "https://github.com/huefy/huefy-sdk",
        "docs": "https://docs.huefy.com/sdk/php"
    },
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.5",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "psalm/plugin-phpunit": "^0.18",
        "vimeo/psalm": "^5.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpmd/phpmd": "^2.13",
        "squizlabs/php_codesniffer": "^3.7",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.21"
    },
    "autoload": {
        "psr-4": {
            "Huefy\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Huefy\\SDK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse",
        "psalm": "psalm",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "phpmd": "phpmd src text phpmd.xml",
        "phpcs": "phpcs --standard=PSR12 src",
        "quality": [
            "@cs-check",
            "@analyse",
            "@psalm",
            "@phpmd",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}